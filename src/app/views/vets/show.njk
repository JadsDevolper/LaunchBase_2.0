{% extends "layout.njk" %}

{% block content %}
  <div class="card">
    <section class="avatar" style="max-height: 890px; background: url({{ vet.avatar_url }}) no-repeat center center / cover" ></section>
    
    <section class="details">
      <h3>Detalhes</h3>

      <div class="item">
        <div>Nome do Veterin√°rio</div>
        <div>{{ vet.name }}</div>
      </div>

      <div class="item">
        <div>Genero</div>
        <div>{{ "Masculino" if vet.gender == "M" else "Feminino" }}</div>
      </div>

      <div class="item">
        <div>Email</div>
        <div>{{ vet.email }}</div>
      </div>

      <div class="item">
        <div>Telefone</div>
        <div>{{ vet.telephone }}</div>
      </div>

      <div class="item">
        <div>Idade</div>
        <div>{{ vet.age }}  Anos</div>
      </div>

      
      <div class="vacina">
        <section>
          <div>Cosnosco desde: </div>
          <div>{{ vet.created_at }}</div>          
        </section>
        
        <a href="/vets/{{ vet.id }}/edit" class="button">Editar</a>
       

      </div>
      
    </section>
  </div>

{% endblock content %}