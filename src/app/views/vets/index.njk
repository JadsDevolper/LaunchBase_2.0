{% extends "layout.njk" %}

{% block content %}
  <div class="card table-container">
    <a href="/vets/create">Novo</a>
    <table width="100%">
      <thead>
        <tr>
          <th>Veterinários</th>
          <th>Contato</th>
          <th>Ação</th>
        </tr>
      </thead>

      <tbody>

        {% for vet in vets %}
          <tr>
            <td>
              <span style="background-image: url({{ vet.avatar_url}})"></span>
              {{ vet.name}}
            </td>
            <td>{{ vet.telephone }}</td>
            <td><a href="/vets/{{ vet.id }}">Ver</a></td>
          </tr>
        {% endfor %}


      </tbody>
    </table>
  </div>

{% endblock content %}